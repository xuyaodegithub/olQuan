/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.flex{
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
}
.toTop{
  position: fixed;
  width: 60rpx;
  height: 60rpx;
  bottom: 150rpx;
  right: 100rpx;
  z-index: 999;
}
.toTop image{
  width: 100%;
  height: 100%;
}
/*文本溢出 出现省略号*/
.over{overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.delete{text-decoration:line-through;}
.border_radius{
  -webkit-border-radius:6rpx;
  -moz-border-radius:6rpx;
  -ms-border-radius: 6rpx;
  -o-border-radius: 6rpx;
  border-radius:6rpx;
}
.over2{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.radius50{
  -webkit-border-radius:50%;
  -moz-border-radius:50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  border-radius:50%;
}
.zhezhao{
    width: 100%;
    height: 100%;
    position: fixed;
    background: rgba(0,0,0,.5);
    left: 0;
    top: 0;
  }
  .backGo{
    overflow: scroll;
    -webkit-overflow-scrolling: touch;  
  }