/* views/personal/applyManger/applyManager.wxss */
page{
  width: 100%;
  min-height: 100%;
  background: #f2f2f2;
}
.inviteTop{
  line-height: 90rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;

}
.xian{
  height: 20rpx;
  background: #f2f2f2;
  width: 100%;
}
.center{
  padding-left: 30rpx;
}
.centerList{
  line-height: 90rpx;
  position: relative;
  font-size: 30rpx;
  border-bottom: 2rpx solid #e1e1e1;
  display: flex;
  display: -webkit-flex;
  display: -webkit-box;
}
.getCode{
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -30rpx;
  background: #E50F72;
  color: #fff;
  z-index: 30;
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}
.centerList input{
  height: 90rpx;
  line-height: 90rpx;
  width: 70%;
}
.bot{
  width: 690rpx;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  margin-left: -345rpx;
  background: #E50F72;
  color: #fff;
  line-height: 90rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 36rpx;
}
.shade{
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 33;
}
.shadeBox{
  width: 75%;
  height: 380rpx;
  background: #fff;
  margin: 0 auto;
 
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.colseIcon{
  display: block;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  z-index: 2;
}
.iconTip{
  text-align: center;
  padding-top: 50rpx;
  font-size: 32rpx;
  color: #333;
}
.inputIcon{
  margin-top: 40rpx;
  position: relative;
}
.codeImg{
  display: block;
  width: 140rpx;
  height: 60rpx;
  position: absolute;
  right: 10%;
  top: 50%;
  margin-top: -30rpx;
  z-index: 2;
}
.inputIconIn{
  width: 85%;
  background: #F3F0F3;
  border-radius: 8rpx;
  height: 90rpx;
  margin: 0 auto;
}
.sureCodeGet{
  width: 400rpx;
  height: 90rpx;
  background: #F798C4;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.zhezhao{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  z-index: 999;
}
.isApplyOut{
  width: 100%;
  padding-top: 440rpx;
}
.isApplyOut image{
  display: block;
  margin: 0 auto;
  width: 159rpx;
  height: 117rpx;
}
.isApplyOut view{
  font-size: 30rpx;
  text-align: center;
  color: #333;
  margin-top: 44rpx;
}