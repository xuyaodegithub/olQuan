/* views/personal/renewPink/renewPink.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 120rpx;
  padding-top: 20rpx;
}
.payment{
  background: #fff;
  font-size: 28rpx;
  line-height: 84rpx;
}
.stores{
  overflow: hidden;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 0 30rpx;
}
.stores-l{
  float: left;
}
.stores-l text{
  font-size: 24rpx;
  color: #888;
}
.stores-r{
  float: right;
}
.choosePay{
  height: 40rpx;
  display: inline-block;
  width: 40rpx;
}
.stores-r text{
  margin-right: 20rpx;
  color: #d33778;
}
.choosePay image{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  margin-top: -8rpx;
}
.orderSure{
  margin-top: 20rpx;
}
.chooseOrder{
  padding:0 24rpx; 
  background: #fff;
  line-height: 56rpx;
  font-size: 24rpx;
  border-bottom:2rpx solid #e5e5e5;
}
.orderWay{
  padding: 24rpx;
  overflow: hidden;
  position: relative;
  background: #fff;
  border-bottom:2rpx solid #e5e5e5;
}
.wayLeft{
	font-size: 28rpx;
}
.wayLeft image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.wayRight{
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  right:24rpx;
}
.wayRight image{
  display: block;
  height: 40rpx;
  width: 40rpx;
}
.content{
  font-size: 28rpx;
  padding: 30rpx 0 30rpx 30rpx;
  color: #333;
  background: #fff;
  line-height:46rpx;
}
.sure{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #e5e5e5;
  background: #fff;
  height: 120rpx;
  line-height: 120rpx;
  z-index: 98;
}
.sure .money{
  font-size: 30rpx;
  color: #666;
  padding-left: 30rpx;
}
.sureOrder{
  position: absolute;
  width: 30%;
  right: 20rpx;
  top: 20rpx;
  border-radius: 8rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #e61d79;
  z-index: 22;
}
.shade{
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 333;
}
.passwordBox{
  width: 85%;
  height: 500rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  margin-top: -250rpx;
  left: 50%;
  margin-left: -42.5%;
  z-index: 333;
  overflow: hidden;
}
.passBoxTop{
  font-size: 32rpx;
  text-align: center;
  padding-top: 60rpx;
}
.passInput{
    width: 85%;
    background: #fafafa;
    border: 1rpx solid #e5e5e5;
    font-size: 32rpx;
    height: 100rpx;
    margin: 80rpx auto;
    display: block;
    line-height: 100rpx;
    padding-left: 20rpx;
    outline: none;
}
.passBot{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: -moz-flex;
  border-top: 1rpx solid #e5e5e5;
  height: 140rpx;
}
.passBotSure{
  width: 50%;
  text-align: center;
  line-height: 135rpx;
  font-size: 32rpx;
}
.payment .input{
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
}
.payment .input input{
      display: inline-block;
      height: 48rpx;
      width: 178rpx;
      margin-right: 20rpx;
      vertical-align: middle;
      border: 2rpx solid #b5b5b5;
      padding-left:15rpx; 
}
.totalDetail{
  margin-top: 20rpx;
  padding: 0 21rpx;
  background: #fff;
  color: #919191;
  font-size: 24rpx;
}
.detailFee{
  line-height: 46rpx;
  overflow: hidden;
}
.soloDetail{
  overflow: hidden;
}
.solo-l{
  float: left;
}
.solo-r{
  float: right;
  color: #D33778;
}