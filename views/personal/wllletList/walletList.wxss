/* views/personal/wllletList/walletList.wxss */
page {
  display: block;
  background-color:#f5f5fa;
}
.walletListTop{
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.listBack{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
}
.numDetail{
  font-size: 120rpx;
  padding: 100rpx 0 0rpx 40rpx;
  color: #fff;
}
.typeDetail{
  padding-left: 40rpx;
  color: #fff;
  font-size: 28rpx;
}
.integralsetail{
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;

}
.integralList{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: -moz-flex;
  
  align-items:center;
  -webkit-align-items:center;
  box-align:center;
  -moz-box-align:center;
  -webkit-box-align:center;
}
.moneyDetail{
  color: #3593DB;
  font-size: 36rpx;
  min-width: 25%;
}
.moneyDetailSpe{
  color: #e50f72;
  min-width: 25%;
}
.listDetail{
  font-size: 26rpx;
  color: #666;
  -webkit-box-flex: 1;   /* OLD - iOS 6-, Safari 3.1-6 */  
  -moz-box-flex: 1;     /* OLD - Firefox 19- */              
  -webkit-flex: 1;      /* Chrome */  
  -ms-flex: 1;           /* IE 10 */  
  flex: 1; 
}
.topbtn{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  line-height: 98rpx;
  height: 100rpx;
  background: #fff;
  -webkit-justify-content:center;
  justify-content:center;
  -moz-box-pack:center;
  -webkit--moz-box-pack:center;
  -webkit-box-pack: center;
  font-size: 32rpx;
  color: #999;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.active{
  border-bottom: 2rpx solid #e50f72 ;
  color: #e50f72 ;
}
.income{
  margin-top: 100rpx;
  font-size: 28rpx;
  text-align: center;
  color: #808080;
  line-height: 80rpx;
}