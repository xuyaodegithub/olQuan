/* views/personal/myCollect/myCollect.wxss */
page {
  display: block;
  background-color: #f5f5fa;
  
  padding-top: 86rpx;
  padding-bottom: 86rpx;
}
.topOut{
  position: fixed;
  z-index: 22;
  width: 100%;
  top: 0;
  left: 0;
  background: #f5f5fa;
}
.topbtn{
  -webkit-justify-content:space-around;
  justify-content:space-around;
  -moz-box-pack:space-around;
  -webkit--moz-box-pack:space-around;
  color: #999;
  font-size: 32rpx;
  padding: 0 100rpx;
  line-height:85rpx;
  position: relative;
}
.checkedBot{
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  color: #333;
  z-index: 22;
}
.widthClass{
  width: 50%;
  text-align: center;
}
.active{
  border-bottom: 4rpx solid #e50f72;
  color: #e50f72;
}
.collectList{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  -webkit-justify-content:flex-start;
  justify-content:flex-start;
  -moz-box-pack:flex-start;
  -webkit--moz-box-pack:flex-start;
  width: 100%;
  padding: 20rpx 0;
  color: #333;
  font-size: 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
  background: #fff;
}
.collectListDetail{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  align-items:center;
  -webkit-align-items:center;
  box-align:center;
  -moz-box-align:center;
  -webkit-box-align:center;
  
}
.sellName{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  align-items:center;
  -webkit-align-items:center;
  box-align:center;
  -moz-box-align:center;
  -webkit-box-align:center;
  margin-left: 30rpx;
}
.chooseImgSon{
  margin-left: 30rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.productImg{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
}
.productName{
  font-size: 28rpx;
  padding-left: 20rpx;
  color: #333;
  height: 72rpx;
  line-height: 36rpx;
  overflow: hidden;
}
.productPrice{
  padding-right: 30rpx;
  padding-left: 20rpx;
}
.submit{
  position: fixed;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  background: #fff;
  left: 0;
  bottom: 0;
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  -webkit-justify-content:space-between;
  justify-content:space-between;
  -moz-box-pack:space-between;
  -webkit--moz-box-pack:space-between;
}
.chooseAll{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -moz-flex;
  display: -ms-flexbox;
  display: -webkit-flex;
  align-items:center;
  -webkit-align-items:center;
  box-align:center;
  -moz-box-align:center;
  -webkit-box-align:center;
}
.chooseName{
  margin-left: 20rpx;
  font-size: 30rpx;
}
.delBot{
  width: 32%;
  background: #e50f72;
  text-align: center;
  line-height: 86rpx;
  font-size: 30rpx;
  color: #fff;
}