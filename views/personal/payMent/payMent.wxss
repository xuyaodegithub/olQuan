  display: -webkit-flex;
  display: -moz-flex;
  border-top: 1rpx solid #e5e5e5;
  height: 140rpx;
}
.passBotSure{
  width: 50%;
  text-align: center;
  line-height: 135rpx;
  font-size: 32rpx;
}
.paySucessOut{
  background: rgba(0,0,0,.4);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
