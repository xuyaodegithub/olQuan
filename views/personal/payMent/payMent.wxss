/* views/personal/payMent/payMent.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 120rpx;
}
.payment{
  background: #fff;
  font-size: 28rpx;
  line-height: 84rpx;
}
.stores{
  overflow: hidden;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 0 30rpx;
}
.stores-l{
  float: left;
}
.stores-l text{
  font-size: 24rpx;
  color: #888;
}
.stores-r{
  float: right;
}
.choosePay{
  height: 40rpx;
  display: inline-block;
  width: 40rpx;
}
.stores-r text{
  margin-right: 20rpx;
  color: #d33778;
}
.choosePay image{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  margin-top: -8rpx;
}
.usestore{
  height: 84rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: -moz-flex;
  align-items: center;
}
.storeNum{
  display: inline-block;
  width: 178rpx;
  font-size: 28rpx;
  color: #6e94f6;
  -moz-border-radius:3rpx; 
  -webkit-border-radius: 3rpx; 
  border-radius: 3rpx;  
  border:  2rpx solid #b5b5b5;
  moz-border: 2rpx solid #b5b5b5; 
  -webkit-border: 2rpx solid #b5b5b5; 
  height: 48rpx;
  padding: 0 0 0 20rpx;
  margin-right: 20rpx;
  outline: none;
}
.sure{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #e5e5e5;
  background: #fff;
  height: 120rpx;
  line-height: 120rpx;
  z-index: 98;
}
.sure .money{
  font-size: 30rpx;
  color: #666;
  padding-left: 30rpx;
}
.sureOrder{
  position: absolute;
  width: 30%;
  right: 20rpx;
  top: 20rpx;
  border-radius: 8rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #e61d79;
  z-index: 22;
}
.totalDetail{
  margin-top: 20rpx;
  padding: 0 21rpx;
  background: #fff;
  color: #919191;
  font-size: 24rpx;
}
.detailFee{
  line-height: 46rpx;
  overflow: hidden;
}
.soloDetail{
  overflow: hidden;
}
.solo-l{
  float: left;
}
.solo-r{
  float: right;
  color: #D33778;
}
.orderSure{
  margin-top: 20rpx;
}
.chooseOrder{
  padding:0 24rpx; 
  background: #fff;
  line-height: 56rpx;
  font-size: 24rpx;
  border-bottom:2rpx solid #e5e5e5;
}
.orderWay{
  padding: 24rpx;
  overflow: hidden;
  position: relative;
  background: #fff;
  border-bottom:2rpx solid #e5e5e5;
}
.wayLeft{
	font-size: 28rpx;
}
.wayLeft image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.wayRight{
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  right:24rpx;
}
.wayRight image{
  display: block;
  height: 40rpx;
  width: 40rpx;
}
.account{
  border-bottom: 2rpx solid #f2f2f2;
  padding: 0 30rpx;
}
.shade{
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 333;
}
.passwordBox{
  width: 85%;
  height: 500rpx;
  background: #fff;
  position: fixed;
  top: 50%;
  margin-top: -250rpx;
  left: 50%;
  margin-left: -42.5%;
  z-index: 333;
  overflow: hidden;
}
.passBoxTop{
  font-size: 32rpx;
