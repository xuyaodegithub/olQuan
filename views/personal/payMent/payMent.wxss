  padding-top: 60rpx;
}
.passInput{
    width: 85%;
    background: #fafafa;
    border: 1rpx solid #e5e5e5;
    font-size: 32rpx;
    height: 100rpx;
    margin: 80rpx auto;
    display: block;
    line-height: 100rpx;
    padding-left: 20rpx;
    outline: none;
}
.passBot{
  display: flex;
  display:-webkit-box;
