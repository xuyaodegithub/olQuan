/* views/personal/inviteList/inviteList.wxss */
page{
  background: #f2f2f2;
}
.agreementTop{
  line-height: 91rpx;
  background: #fff;
  text-align: center;
  font-size: 32rpx;
}
.topbtn{
  -webkit-justify-content:space-around;
  justify-content:space-around;
  -moz-box-pack:space-around;
  -webkit--moz-box-pack:space-around;
  background: #fff;
  font-size: 32rpx;
  color: #777;
  line-height: 90rpx;
  border-bottom: 2rpx solid #E1E1E1;
}
.active{
  border-bottom: 4rpx solid #E50F72;
  color: #E50F72;
}
.applyList{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 26rpx 70rpx 26rpx 30rpx;
  overflow: hidden;
  position: relative;
}
.listLeft{
  float: left;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.listLeft image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.listCent{
  float: left;
  font-size: 30rpx;
  color: #333;
  margin-left: 12rpx;
}
.listCent .top{
  line-height: 46rpx;
}
.listCent .bot{
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #777;
}
.listRight{
  float: right;
  font-size: 28rpx;
  color: #777;
  line-height: 90rpx;
}
.agreeOrNot{
  position: absolute;
  right: 30rpx;
  padding-top: 20rpx;
  top: 24rpx;
  font-size: 0;
}
.agreeOrNot view{
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  width:100rpx;
  line-height: 52rpx;
}
.agree{
  background: #E50F72;
  color: #fff;
  border-radius: 26rpx;
}
.agreeNo{
  border: 2rpx solid #AAAAAA;
  line-height: 48rpx;
  width: 96rpx;
  color: #333;
  border-radius: 26rpx;
  margin-left: 18rpx;
}