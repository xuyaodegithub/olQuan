page{
  width: 100%;
  background-color: #ffffff;
  padding-top: 90rpx;
}
.content{
  padding:10rpx 20rpx 0;
}
.classBtn{
  font-size: 28rpx;
  color: #777777;
  justify-content: center;
  line-height: 60rpx;
  padding: 30rpx 0 0;
}
.fixedNav{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index:1000; 
  padding-bottom: 30rpx;
  background-color: #ffffff;
}
.timeTop{
  position: fixed;
  width: 100%;
  top: 90rpx;
  left: 0;
  z-index:1000; 
}
.classBtn image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.classBtn > view{
  align-items: center;
}
.classBtn > view:nth-child(2n){
  margin: 0 30rpx;
}
.productList{
  background-color:#F7F7F7; 
  color: #333333;
  font-size: 26rpx;
}
.productList > view > view{
  margin-bottom: 20rpx;
  background-color: #ffffff;
  padding: 30rpx 20rpx 0;
}
.productList > view.typeLast > view{
  margin-bottom: 0;
  border-bottom: 2rpx solid #e1e1e1;
}
.productList > view .title{
  line-height: 60rpx;
}
.productList > view .smallTitle{
  font-size: 24rpx;
  line-height: 32rpx;
  color: #777777;
}
.productList > view .price{
  font-size: 24rpx;
  color: #777777;
  line-height: 70rpx;
  justify-content: space-between;
}
.productList > view .price text{
  font-size: 34rpx;
  color: #E5006E;
}
.productList > view .price .firstTitle{
  color: #000000;
}
.productList image{
  display: block;
  width: 100%;
}
.timer{
  justify-content: center;
  background-color:#F7F7F7;
  padding: 43rpx 0;
  font-size: 30rpx;
  color: #333333;
  flex-wrap: nowrap;
  overflow-x: auto;
  margin-top: 30rpx;
}
.timer > view{
  margin: 0 27rpx;
  text-align: center;
}
.timer > view view:first-child{
  margin-bottom: 10rpx;
}
.timer > view view:last-child{
  font-size: 22rpx;
  color: #777777
}
.timer > view.activeTime > view{
  color: #E50F72
}
.productList >  view.typeLast > view{
  /* justify-content: space-between; */
  font-size: 28rpx;
  padding: 10rpx 30rpx 20rpx 10rpx;
  color: #333333;
}
.typeLast .rightP{
  padding: 18rpx 0 0 22rpx;
  -webkit-flex: 1;
  -ms-flex: 1;
  -moz-flex: 1;
  -o-flex: 1;
  flex: 1;
  /* text-align: center; */
}
.typeLast > view > view:first-child{
  width: 250rpx;
  height: 250rpx;
}
.typeLast > view image{
  display: block;
  width: 250rpx;
  height: 250rpx;
}
.typeLast > view text{
  line-height: 84rpx;
  font-size: 24rpx;
  color: #e50f72;
}
.typeLast > view .btn{
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  font-size: 24rpx;
}
.typeLast > view .btn image{
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
}
.border_radius{
  align-items: center;
  justify-content: center;
}
.typeLast > view .btn view:last-child{
  line-height: 56rpx;
  color: #ffffff;
  text-align: center;
  width: 130rpx;
  background-color: #e50f72;
}
.typeLast > view .btn view:last-child.disno{
  background-color: rgb(252, 137, 178)
}
.typeLast > view > view:first-child{
  position: relative;
}
.typeLast > view > view:first-child .tryOut{
  position: absolute;
  top: 50%;
  left:50%;
  width: 150rpx;
  height: 150rpx;
  margin: -75rpx 0 0 -75rpx;
}
.productList > view .price .newChange{
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.productList > view .price .aloneR{
  color: #777;
  align-items: center;
}
.productList > view .posiImg{
  position: absolute;
  display: block;
  width: 134rpx;
  height: 45rpx;
  left: 50rpx;
  top: 22rpx;
}