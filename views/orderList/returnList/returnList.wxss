/* views/orderList/returnList/returnList.wxss */
page {
  background-color: #f5f5fa;
}
.returnTop{
  font-size: 30rpx;
  color: #666;
  line-height: 90rpx;
  padding-left:25rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}
.productList{
  padding: 20rpx;
  background: #f6f6f6
}
.productDetail{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: -moz-flex;
  -webkit-justify-content:space-between;
  justify-content:space-between;
  -moz-box-pack:space-between;
  -webkit--moz-box-pack:space-between;
  margin-bottom: 20rpx;
  
}
.productDetail:last-child{
  margin-bottom: 0;
}
.productImage{
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.porductName{
  display: flex;
  display:-webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: -moz-flex;
  -webkit-justify-content:space-between;
  justify-content:space-between;
  -moz-box-pack:space-between;
  -webkit--moz-box-pack:space-between;
}
.porductName-top{
  width: 65%;
  height: 96rpx;
  line-height: 48rpx;
  overflow: hidden;
  font-size: 26rpx;
  color: #333;
}
.porductName-bot{
  font-size: 26rpx;
  line-height: 48rpx
}
.productNormal{
  width: 65%;
  font-size: 24rpx;
  color: #999;
  height: auto;
  margin-top: 20rpx;
}
.chooseWay{
  font-size: 26rpx;
  color: #808080;
  line-height: 80rpx;
  padding-left: 25rpx;
}
.mode{
  line-height: 88rpx;
  color: #333;
  font-size: 30rpx;
  background: #fff;
  padding-left: 25rpx;
  background: #fff;

}
.pickerOut{
  padding: 0 30rpx;
  background: #fff;
  font-size: 30rpx;
  color: #333;
  line-height: 88rpx;
  position: relative;
}
.rowMoreImg{
  display: block;
  width: 28rpx;
  height: 16rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -8rpx;
}