/* views/orderList/evaluate/evaluate.wxss */
page{
  background-color: #f5f5fa;
  width: 100%;
  padding-bottom: 40rpx;
}
.pMess{
  background-color:#fff;
  margin-bottom: 30rpx;
}
.pMess > .product{
  /* background-color: #f7f7f7; */
  padding:20rpx;
   border-bottom: 2rpx solid #e5e5e5;
}
.pMess .flex > image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.pMess .flex .center{
  width: 40%;
  font-size: 26rpx;
  line-height: 48rpx;
  color: #333333;
}
.pMess .flex .center .color:nth-child(2){
  margin-top: 20rpx;
}
.pMess .flex .center .color{
  font-size: 24rpx;
  color:#666666;
  /* width:50%; */
  line-height: 36rpx;
  margin-top: 5rpx;
}
.pMess > .flex .right{
  flex: 1;
}
.pMess >.flex .right{
  font-size: 24rpx;
  color: #666;
  text-align: right;
}
.pMess .right text{
  display: block;
}
.pMess .right text:first-child{
  color: #333333;
  line-height: 48rpx;
  margin-bottom:34rpx; 
  }
  .pMess .right text:last-child{
    margin-top: 10rpx;
  }
  .five{
    padding:0 20rpx;
    font-size: 30rpx;
    color: #666;
    line-height: 112rpx;
    border-bottom: 2rpx solid #e5e5e5;
    align-items: center;
  }
  .five view:first-child{
    margin-right: 80rpx;
  }
  .five view:last-child{
    align-items: center;
  }
  .pMess .five view:last-child image{
    height: 40rpx;
    width: 40rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
  }
  .content textarea{
    width:-webkit-calc(100% - 60rpx); 
   width:-moz-calc(100% - 60rpx); 
   width:calc(100% - 60rpx);
    height:200rpx;
    padding: 30rpx;
    font-size: 30rpx;
    color: #b2b2b2;
  }
  .place{
      color: #666;
  }
  .content .maxlength{
    color: #b2b2b2;
    font-size: 24rpx;
    padding: 30rpx;
    text-align: right;
  }
  .upadd{
    padding:20rpx 30rpx;
    flex-wrap: wrap;
  }
  .upadd > view{
    margin-right: 30rpx;
    position: relative;
  }
  .upadd > view .position{
    position: absolute;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 40rpx;
    margin: -15rpx -15rpx 0 0;
 }
  .upadd image{
    width: 180rpx;
    height: 180rpx;
  }
  .btn{
    margin: 0 auto;
    text-align: center;
    margin-top: 60rpx;
    width: 90%;
    line-height: 100rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #e50f72;
  }