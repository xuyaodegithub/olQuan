/* views/plusPage/plusPage.wxss */
page{
  background-color: #F7F7F7;
  width: 100%;
}
.header{
  padding: 0 20rpx;
  background-color: #FFFFFF;
  padding-top: 10rpx;
}
.classBtn{
  line-height: 58rpx;
  justify-content: center;
  font-size: 30rpx;
  padding: 30rpx 0
}
.classTop{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #ffffff;
  z-index: 999;
}
.classBtn view:nth-child(n){
  margin:0 15rpx;
}
.alcssActive{
  color: #E50F72;
  border-bottom: 2rpx solid #E50F72;
}
.dataList{
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #131313;
}
.product{
  background-color:#FFFFFF; 
  -webkit-box-shadow:0 0 6rpx rgba(132, 128, 128, 0.18);
  -moz-box-shadow: 0 0 6rpx rgba(132, 128, 128, 0.18);
  -o-box-shadow:0 0 6rpx rgba(132, 128, 128, 0.18);
  -ms-box-shadow:0 0 6rpx rgba(132, 128, 128, 0.18);
  box-shadow:0 0 6rpx rgba(132, 128, 128, 0.18);
  margin-bottom: 20rpx;
  padding-bottom: 24rpx;
}
.dataList .title{
   padding: 0 14rpx;
}
.dataList .smalltitle{
  padding: 0 28rpx;
  font-size: 22rpx;
  color: #777777;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}
.dataList image{
  display: block;
  width: 100%;
}
.dataList .price{
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
}
.dataList .left{
  margin-top: -10rpx;
}
.dataList .left view:first-child{
font-size: 28rpx;
color: #131313;
margin-right: 8rpx;
}
.dataList .left view:nth-child(2){
font-size: 24rpx;
color: #AAAAAA;
margin-right: 14rpx;
}
.dataList .left view:last-child{
  color: #E5006E;
  font-size: 26rpx;
}
.dataList .right view:first-child,.dataList .right button{
color: #E5006E;
text-align: center;
font-size: 24rpx;
line-height: 44rpx;
width: 88rpx;
border: 2rpx solid #E5006E;
-webkit-border-radius:6rpx;
-moz-border-radius:6rpx;
-ms-border-radius: 6rpx;
-o-border-radius: 6rpx;
border-radius:6rpx;
padding: 0;
}
.dataList .right button{
  color: #FFFFFF;
  background-color: #E5006E;
  margin-left: 18rpx;
  border-color: #E5006E;
}
.dataList .right button::after{
  border: none;
}
.rightte{
  width: 120rpx;
  line-height: 48rpx;
  border:2rpx solid #fa006a;
  text-align:center;
  color:#fa006a;
  font-size: 26rpx;
  -webkit-border-radius:6rpx;
  -moz-border-radius:6rpx;
  -ms-border-radius: 6rpx;
  -o-border-radius: 6rpx;
  border-radius:6rpx;
}
.DialogMess{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 730rpx;
  min-height: 500rpx;
  margin-left: -365rpx;
  margin-top: -250rpx;
  z-index: 9999;
}
.DialogMess image:first-child{
  position: absolute;
  top: -50rpx;
  right: 50rpx;
  width: 44rpx;
  height: 44rpx;
}
.DialogMess image:last-child{
  display: block;
  width: 100%;
}